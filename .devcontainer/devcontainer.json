{
  "name": "Cow",
  "build": {
    "dockerfile": "../src/docker-image/Dockerfile",
    "context": "../",
    "target": "vscode-dev-container"
  },
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/src/cow/src",
      "target": "/app/src",
      "type": "bind"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.black-formatter"
      ]
    }
  }
}
